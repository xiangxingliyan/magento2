<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <espl_autocomplete>
            <general>
                <enable_in_frontend>1</enable_in_frontend>
                <showproduct>1</showproduct>
                <limit>3</limit>
                <showcategoty>1</showcategoty>
                <catlimit>3</catlimit>
                <min_length>1</min_length>
                <cache_lifetime>86400</cache_lifetime>
                <use_local_storage>1</use_local_storage>
            </general>
            <design>
                <cat_header_textfont>CATEGORIES</cat_header_textfont>
                <pro_header_textfont>SUGGESTED PRODUCTS</pro_header_textfont>
                <cat_header_text>#fff</cat_header_text>
                <cat_header_background>#1270a3</cat_header_background>
                <cat_result_text>#1270a3</cat_result_text>
                <cat_result_text_hover>#1270a3</cat_result_text_hover>
                <cat_result_background>#fff</cat_result_background>
                <pro_header_text>#fff</pro_header_text>
                <pro_header_background>#1270a3</pro_header_background>
                <pro_result_text>#1270a3</pro_result_text>
                <pro_result_text_hover>#1270a3</pro_result_text_hover>
                <pro_result_background>#fff</pro_result_background>
                <pro_result_price_color>#FF9900</pro_result_price_color>
                <pro_result_price_color_hover>#FF9900</pro_result_price_color_hover>
                <pro_result_price_label_color>#1270a3</pro_result_price_label_color>
                <pro_result_price_label_color_hov>#1270a3</pro_result_price_label_color_hov>
            </design>
        </espl_autocomplete>
    </default>
</config>