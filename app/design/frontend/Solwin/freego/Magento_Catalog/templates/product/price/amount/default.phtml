if('configurable' == $productObj->getTypeId()) {
    $productPrice = min(array_column(array_map(function($row) {
        return ['price' => floatval($row->getPrice())];
    }, $productObj->getTypeInstance()->getUsedProducts($productObj)), 'price'));
} else {
    $productPrice = $productObj->getFinalPrice();
}

